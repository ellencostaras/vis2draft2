{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Human Hair Trade Participants",
      "font": "Montserrat",
      "fontSize": 18
    },
    "width": 900,
    "height": 500,
    "params": [
      {
        "name": "Year_selection",
        "value": 2018,
        "bind": {
          "input": "range",
          "min": 2011,
          "max": 2022,
          "step": 1,
          "name": "Year:  "
        }
      }
    ],
    "projection": {
      "type": "equalEarth"
    },
    "layer": [
      {
        "data": {
          "url": "draft2/js/natural_earth_maps/ne_10m_ocean.json",
          "format": {
              "type": "topojson",
              "feature": "ne_10m_ocean"
          }
        },
      "mark": {
          "type": "geoshape",
          "fill": "skyblue"
        }
      },
      {
      "data": {
          "url": "draft2/js/natural_earth_maps/ne_110m_graticules_30.json",
          "format": {
              "type": "topojson",
              "feature": "ne_110m_graticules_30"
          }
      },
      "mark": {
          "type": "geoshape",
          "fill": null,
          "stroke": "lightgray"
      }
      },
      {
        "data": {
          "url": "draft2/js/natural_earth_maps/ne_110m_admin_0_countries.json",
          "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
          } 
        },
        "transform": [
          {
            "calculate": "datum.properties.NAME + ' did not participate in the human hair market during ' + Year_selection",
            "as": "note"
          }
        ],
        "mark": {
          "type": "geoshape",
          "fill": "#ddd",
          "stroke": "white",
          "strokeWidth": 1
        },
        "encoding": {"tooltip": {"field": "note"}}
      },
      {
        "data": {
          "url": "draft2/data/choropleth_data.csv"
        },
        "transform": [
          {
            "lookup": "ReporterDesc",
            "from": {
              "data": {
                "url": "draft2/js/natural_earth_maps/ne_110m_admin_0_countries.json",
                "format": {
                  "type": "topojson",
                  "feature": "ne_110m_admin_0_countries"
                }
              },
              "key": "properties.NAME"
            },
            "as": "geo"
          },
          { 
            "filter": "datum.RefYear == Year_selection" 
          },
          {
            "calculate": "datum.Qty + 1", "as": "Quantity"
          }
        ],
        "mark": {
          "type": "geoshape", 
          "stroke": "#fff", 
          "strokeWidth": 0.5
        },
        "encoding": {
          "shape": {
            "field": "geo", 
            "type": "geojson"
          },
          "color": {
            "field": "Quantity",
            "type": "quantitative",
            "title": "Total Hair Exports (kg)",
            "scale": {
              "type": "log", 
              "scheme": "reds"
            },
            "legend": {
              "format": ".2s",
              "titleFont": "Montserrat",
              "labelFont": "Montserrat"
            }
          },
          "tooltip": [
            {
              "field": "ReporterDesc",
              "type": "nominal", 
              "title": "Country"
            },
            {
              "field": "Qty",
              "type": "quantitative",
              "title": "Weight kg",
              "format": ","
            },
            {
              "field": "RefYear", 
              "type": "quantitative", 
              "title": "Year"}
          ]
        }
      }
    ],
    "config": {}
  }